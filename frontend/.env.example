# Weather API Configuration
# NOTE: API Key is NOT needed on frontend - it's securely stored on backend
# Frontend calls backend API, which then calls WeatherAPI.com securely
REACT_APP_WEATHER_API_PROVIDER=weatherapi

# Supabase Configuration (Frontend - Anonymous/Public Key)
# This is safe to expose - it respects Row Level Security policies
REACT_APP_SUPABASE_URL=<YOUR_SUPABASE_URL>
REACT_APP_SUPABASE_ANON_KEY=<YOUR_SUPABASE_ANON_KEY>

# Backend API Configuration
# This is where frontend sends requests (backend handles API keys securely)
REACT_APP_NODE_API_BASE=http://localhost:4000/api

# Refresh interval for real-time weather updates (in seconds)
REACT_APP_DEFAULT_REFRESH_SECONDS=60
